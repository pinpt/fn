{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es6",
    "module":"esnext",
    "lib": ["es2015", "es2016", "es2017", "esnext"],
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "typeRoots": [
      "node_modules/@types",
      "types"
    ],
    "declarationDir": "dist/@types",
    "outDir": "dist"
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src"
  ]
}
